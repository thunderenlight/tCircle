<h1>Interests</h1>

<div class="grid row">
	<% @interests.each do |interest|  %>
	<div class="col-md-3">
		<div class="panel panel-default interest">
			<div class="panel-body">
				
			<%= link_to image_tag(interest.image.url(:medium)), interest %>
			
			</div>
			<div class="panel-footer">
				<p><%= interest.description %></p>
				<p>Posted in <%= link_to interest.board.title, interest.board %></p>
				<h1><%= interest.name %></h1>
				<div class="interest">
					<%= link_to("Edit", edit_interest_path(interest)) %>				
					<%= link_to("Delete", interest, method: :delete, data: { confirm: 'Are you sure?' }) %>				
				</div>
					 
			</div>
		</div>
	</div>

	<% end %>
</div>